<?xml version="1.0" encoding="UTF-8"?>
<context xmlns="http://www.w3school.com.cn"
				 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				 xsi:schemaLocation="http://www.w3school.com.cn business-process.xsd">

	<process name="order">
		<node name="createOrder" class="org.ylzl.eden.spring.integration.bpc.CreateOrderProcessor"
			  next="riskCheck"
			  begin="true"/>
		<node name="riskCheck" class="org.ylzl.eden.spring.integration.bpc.RiskCheckProcessor"
			  next="lockCoupon,deductStock"/>
		<node name="lockCoupon" class="org.ylzl.eden.spring.integration.bpc.LockCouponProcessor"
			  async="true"/>
		<node name="deductStock" class="org.ylzl.eden.spring.integration.bpc.DeductStockProcessor"
			  next="saveOrder" />
		<node name="saveOrder" class="org.ylzl.eden.spring.integration.bpc.SaveOrderProcessor" />
	</process>

</context>
